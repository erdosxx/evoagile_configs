#!/usr/bin/env bash
TITLE=$1
TERMINAL="$HOME/.local/bin/st"

case ${TITLE} in

	scratchpad)
    # entry="urxvt -title scratchpad"
    entry="$TERMINAL -T ${TITLE}"
    ;;
	FM)
    entry="$TERMINAL -T ${TITLE} -e $HOME/.local/bin/bettercd.sh"
    ;;
  Neomutt)
    entry="$TERMINAL -T ${TITLE} -e neomutt"
    ;;
  Todo)
    entry="$TERMINAL -T ${TITLE} -e $HOME/.local/bin/schedule.sh"
    ;;
esac

xdotool search --onlyvisible --name "${TITLE}" windowunmap \
    || xdotool search --name "${TITLE}" windowmap \
    || $entry &

#!/usr/bin/env bash

SCRATCHPAD_NAME=$1

case "$1" in

    qutebrowser)
        entry="qutebrowser"
        ;;
    Zoom)
        entry="zoom"
        ;;
    Alacritty)
        entry="urxvt -e $HOME/.local/bin/wingeo"
        ;;
    Calc)
        entry="qalculate-gtk"
        ;;
    Mail)
        entry="urxvt -title neomutt -e /usr/bin/neomutt"
        ;;
    Menu)
        entry="urxvt -title launch -e $HOME/.local/bin/launch.sh"
esac

xdotool search --onlyvisible --class "$1" windowunmap \
    || xdotool search --classname "$1" windowmap \
    || $entry &

